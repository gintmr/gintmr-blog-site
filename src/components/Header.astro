---
import Hr from "./Hr.astro";
import IconX from "@/assets/icons/IconX.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LinkButton from "./LinkButton.astro";
import { SITE } from "@/config";
import { UI } from "@/i18n/ui";

const { pathname } = Astro.url;
const faviconURL = `/${SITE.favicon}?v=${SITE.faviconVersion}`;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  return currentPath === path || currentPathArray[0] === pathArray[0];
};
---

<header
  class="sticky top-0 z-50 w-full bg-transparent backdrop-blur-2xl backdrop-saturate-150 sm:border-b"
>
  <a
    id="skip-to-content"
    href="#main-content"
    class="absolute start-16 -top-[100vh] z-50 px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
  >
    Skip to content
  </a>
  <div
    id="nav-container"
    class="mx-auto flex max-w-app flex-col items-center justify-between sm:flex-row"
  >
    <div
      id="top-nav-wrap"
      class="relative flex w-full items-center justify-between bg-background p-4 sm:h-18 sm:justify-start sm:bg-transparent sm:py-0"
    >
      <!-- 左侧：网站标题 -->
      <a
        href="/"
        class="mr-8 py-1 text-xl leading-8 font-semibold whitespace-nowrap sm:my-auto sm:flex-shrink-0 sm:leading-none"
      >
        <div class="relative -left-1.5 flex items-center">
          <img src={faviconURL} alt="favicon" class="h-10 w-10" />
          <span class="ml-2">{SITE.title}</span>
        </div>
      </a>

      <!-- 主导航菜单（桌面端） -->
      <nav id="main-nav" class="hidden sm:flex sm:items-center">
        <ul class="flex items-center gap-x-2">
          <li>
            <a
              href="/posts"
              class:list={[
                "px-3 py-2 text-base font-medium transition-colors hover:text-accent",
                { "active-nav": isActive("/posts") },
              ]}
            >
              {UI.nav.blog}
            </a>
          </li>
          <li>
            <a
              href="/about"
              class:list={[
                "px-3 py-2 text-base font-medium transition-colors hover:text-accent",
                { "active-nav": isActive("/about") },
              ]}
            >
              {UI.nav.about}
            </a>
          </li>
          <li>
            <a
              href="/links"
              class:list={[
                "px-3 py-2 text-base font-medium transition-colors hover:text-accent",
                { "active-nav": isActive("/links") },
              ]}
            >
              {UI.nav.links}
            </a>
          </li>
        </ul>
      </nav>

      <!-- 右侧：功能按钮（桌面端） -->
      <div
        class="hidden sm:ml-auto sm:flex sm:flex-shrink-0 sm:items-center sm:gap-x-2"
      >
        {
          SITE.showArchives && (
            <LinkButton
              href="/archives"
              class:list={[
                "focus-outline flex p-3",
                {
                  "active-nav [&>svg]:stroke-accent": isActive("/archives"),
                },
              ]}
              ariaLabel="archives"
              title="Archives"
            >
              <IconArchive class="h-4 w-4" />
            </LinkButton>
          )
        }
        <LinkButton
          href="/search"
          class:list={[
            "focus-outline flex p-3",
            {
              "active-nav [&>svg]:stroke-accent": isActive("/search"),
            },
          ]}
          ariaLabel="search"
          title="Search"
        >
          <IconSearch class="h-4 w-4" />
        </LinkButton>
      </div>

      <!-- 移动端菜单按钮 -->
      <button
        id="menu-btn"
        class="focus-outline p-2 sm:hidden"
        aria-label="Open Menu"
        aria-expanded="false"
        aria-controls="menu-items"
      >
        <IconX id="close-icon" class="hidden" />
        <IconMenuDeep id="menu-icon" />
      </button>
    </div>

    <!-- 移动端导航菜单 -->
    <nav id="nav-menu" class="w-full sm:hidden">
      <ul
        id="menu-items"
        class:list={[
          "mx-auto mt-4 grid w-44 grid-cols-2 place-content-center gap-2",
          "[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-3 [&>li>a]:text-center [&>li>a]:text-base [&>li>a]:font-medium [&>li>a]:hover:text-accent",
          "hidden",
        ]}
      >
        <li class="col-span-6">
          <a href="/posts" class:list={{ "active-nav": isActive("/posts") }}>
            {UI.nav.blog}
          </a>
        </li>
        <li class="col-span-6">
          <a href="/about" class:list={{ "active-nav": isActive("/about") }}>
            {UI.nav.about}
          </a>
        </li>
        <li class="col-span-6">
          <a href="/links" class:list={{ "active-nav": isActive("/links") }}>
            {UI.nav.links}
          </a>
        </li>
        {
          SITE.showArchives && (
            <li class="col-span-6">
              <LinkButton
                href="/archives"
                class:list={[
                  "focus-outline flex justify-center p-3",
                  {
                    "active-nav [&>svg]:stroke-accent": isActive("/archives"),
                  },
                ]}
                ariaLabel="archives"
                title="Archives"
              >
                <IconArchive class="hidden w-8 sm:inline-block" />
                <span class="sm:sr-only">{UI.nav.archives}</span>
              </LinkButton>
            </li>
          )
        }
        <li class="col-span-2 flex items-center justify-center">
          <LinkButton
            href="/search"
            class:list={[
              "focus-outline flex p-3",
              {
                "active-nav [&>svg]:stroke-accent": isActive("/search"),
              },
            ]}
            ariaLabel="search"
            title="Search"
          >
            <IconSearch class="w-6" />
          </LinkButton>
        </li>
      </ul>
    </nav>
  </div>
  <Hr classNames="sm:hidden" />
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");

      menuItems.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
