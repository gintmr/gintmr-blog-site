---
import { ClientRouter } from "astro:transitions";
import { PUBLIC_GOOGLE_SITE_VERIFICATION, PUBLIC_GOOGLE_ANALYTICS_ID } from "astro:env/client";
import { SITE } from "@/config";
import { UI_COLORS, UI_EFFECTS, UI_FONTS, UI_THEME } from "@/ui.config";
import "@/styles/global.css";

import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";

export interface Props {
  title?: string;
  author?: string;
  profile?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  scrollSmooth?: boolean;
}

const {
  title = SITE.title,
  author = SITE.author,
  profile = SITE.profile,
  description = SITE.desc,
  ogImage = SITE.ogImage ? `/${SITE.ogImage}` : "/og.jpg",
  canonicalURL = new URL(Astro.url.pathname, Astro.url),
  pubDatetime,
  modDatetime,
  scrollSmooth = false,
} = Astro.props;

const socialImageURL = new URL(ogImage, Astro.url);
const faviconURL = `/${SITE.favicon}?v=${SITE.faviconVersion}`;
const designTokenCss = `
  :root {
    --site-font-sans: ${UI_FONTS.sans};
    --site-font-serif: ${UI_FONTS.serif};
    --site-font-mono: ${UI_FONTS.mono};
    --site-light-background: ${UI_COLORS.light.background};
    --site-light-foreground: ${UI_COLORS.light.foreground};
    --site-light-accent: ${UI_COLORS.light.accent};
    --site-light-muted: ${UI_COLORS.light.muted};
    --site-light-border: ${UI_COLORS.light.border};
    --site-dark-background: ${UI_COLORS.dark.background};
    --site-dark-foreground: ${UI_COLORS.dark.foreground};
    --site-dark-accent: ${UI_COLORS.dark.accent};
    --site-dark-muted: ${UI_COLORS.dark.muted};
    --site-dark-border: ${UI_COLORS.dark.border};
    --site-image-neon-glow: ${UI_COLORS.imageNeonGlow};
    --site-image-neon-c1: ${UI_COLORS.imageNeonGradient.c1};
    --site-image-neon-c2: ${UI_COLORS.imageNeonGradient.c2};
    --site-image-neon-c3: ${UI_COLORS.imageNeonGradient.c3};
    --site-image-neon-c4: ${UI_COLORS.imageNeonGradient.c4};
    --site-ai-summary-border: ${UI_COLORS.aiSummary.border};
    --site-ai-summary-bg-from: ${UI_COLORS.aiSummary.bgFrom};
    --site-ai-summary-bg-via: ${UI_COLORS.aiSummary.bgVia};
    --site-ai-summary-bg-to: ${UI_COLORS.aiSummary.bgTo};
    --site-ai-summary-title-from: ${UI_COLORS.aiSummary.titleFrom};
    --site-ai-summary-title-to: ${UI_COLORS.aiSummary.titleTo};
    --site-ai-summary-star-from: ${UI_COLORS.aiSummary.starFrom};
    --site-ai-summary-star-to: ${UI_COLORS.aiSummary.starTo};
    --site-ai-summary-selection-bg: ${UI_COLORS.aiSummary.selectionBg};
  }
`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: `${title}`,
  image: `${socialImageURL}`,
  datePublished: `${pubDatetime?.toISOString()}`,
  ...(modDatetime && { dateModified: modDatetime.toISOString() }),
  author: [
    {
      "@type": "Person",
      name: `${author}`,
      ...(profile && { url: profile }),
    },
  ],
};
---

<!doctype html>
<html
  dir={SITE.dir}
  lang=`${SITE.lang ?? "en"}`
  class={`${scrollSmooth && "scroll-smooth"}`}
  data-force-dark={UI_THEME.forceDarkMode ? "true" : "false"}
  data-theme={UI_THEME.forceDarkMode ? "dark" : undefined}
  data-effect-page-transition={UI_EFFECTS.pageTransition ? "on" : "off"}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={faviconURL} />
    <link rel="shortcut icon" type="image/png" href={faviconURL} />
    <link rel="apple-touch-icon" href={faviconURL} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Article Published/Modified time -->
    {
      pubDatetime && (
        <meta
          property="article:published_time"
          content={pubDatetime.toISOString()}
        />
      )
    }
    {
      modDatetime && (
        <meta
          property="article:modified_time"
          content={modDatetime.toISOString()}
        />
      )
    }

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Google JSON-LD Structured data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(structuredData)}
    />

    <!-- Enable RSS feed auto-discovery  -->
    <!-- https://docs.astro.build/en/recipes/rss/#enabling-rss-feed-auto-discovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE.title}
      href={new URL("rss.xml", Astro.site)}
    />

    <meta name="theme-color" content="" />

    {
      // If PUBLIC_GOOGLE_SITE_VERIFICATION is set in the environment variable,
      // include google-site-verification tag in the heading
      // Learn more: https://support.google.com/webmasters/answer/9008080#meta_tag_verification&zippy=%2Chtml-tag
      PUBLIC_GOOGLE_SITE_VERIFICATION && (
        <meta
          name="google-site-verification"
          content={PUBLIC_GOOGLE_SITE_VERIFICATION}
        />
      )
    }

    {
      // If PUBLIC_GOOGLE_ANALYTICS_ID is set in the environment variable,
      // include Google Analytics gtag.js
      PUBLIC_GOOGLE_ANALYTICS_ID && (
        <>
          <!-- Google tag (gtag.js) -->
          <script async src={`https://www.googletagmanager.com/gtag/js?id=${PUBLIC_GOOGLE_ANALYTICS_ID}`}></script>
          <script is:inline define:vars={{ gaId: PUBLIC_GOOGLE_ANALYTICS_ID }}>
             window.dataLayer = window.dataLayer || [];
             /* eslint-disable prefer-rest-params */
             function gtag(){dataLayer.push(arguments);}
             /* eslint-enable prefer-rest-params */
             gtag('js', new Date());
             gtag('config', gaId);
           </script>
        </>
      )
    }

    <ClientRouter />

    <script is:inline src="/app-controls.js"></script>
    <script is:inline src="/site-effects.js"></script>
    <style is:inline set:html={designTokenCss}></style>
  </head>
  <body
    data-effect-ambient={UI_EFFECTS.ambientGlow ? "on" : "off"}
    data-effect-grid={UI_EFFECTS.gridOverlay ? "on" : "off"}
    data-effect-cursor={UI_EFFECTS.cursorGlow ? "on" : "off"}
    data-effect-reveal={UI_EFFECTS.revealOnScroll ? "on" : "off"}
    data-effect-card-glow={UI_EFFECTS.cardHoverGlow ? "on" : "off"}
    data-effect-nav-glass={UI_EFFECTS.navGlass ? "on" : "off"}
    data-effect-heading-beam={UI_EFFECTS.headingBeam ? "on" : "off"}
    data-effect-image-neon={UI_EFFECTS.imageNeonBorder ? "on" : "off"}
    data-effect-image-lift={UI_EFFECTS.imageLift ? "on" : "off"}
  >
    <slot />
    <Analytics />
    <SpeedInsights />
  </body>
</html>
